<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="15dp"
    tools:showIn="@layout/fragment_goods_subcategory">

    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/text_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:fontFamily="@font/rokkitt_regular"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@+id/image_view_back"
        app:layout_constraintTop_toBottomOf="@+id/image_view_back" />

    <TextView
        android:id="@+id/text_subcategory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electronics"
        android:fontFamily="@font/rokkitt_bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/image_view_back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>