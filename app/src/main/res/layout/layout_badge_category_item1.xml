<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_grey_button"
    android:paddingHorizontal="13dp"
    android:paddingVertical="5dp"
    android:layout_marginRight="12dp"
    android:layout_marginVertical="5dp">

    <TextView
        android:id="@+id/text_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="@font/rokkitt_bold"
        android:textColor="@color/rusty_brown"
        />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="15"
        android:fontFamily="@font/rokkitt_bold"
        android:textSize="13sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/text_category_name"
        android:layout_alignRight="@+id/text_category_name"
        android:background="@drawable/widget_badge"/>

</RelativeLayout>